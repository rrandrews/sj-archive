<div class="container fixed-width">
  <%= render partial: 'shared/search' %>
  <span class="h1">Contestants
    <%= link_to "Episodes", episodes_path, class: "h4 link" %>
  </span>
  <section class="episodes-list">
    <div class="list-group">
      <% @contestants.each do |c| %>
        <%= link_to contestant_path(c),
          class: 'list-group-item list-group-item-action' do %>
          <span class="h4"><%= c.last_name %>, <%= c.first_name %></span>
          <span class="pull-right"><%= c.note %></span>
        <% end %>

      <% end %>
    </div>
  </section>
  <%= render partial: 'shared/footer' %>
</div>
