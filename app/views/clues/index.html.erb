<div class="container fixed-width">
  <header>
    <span class="h1">Clue Search
      <%= link_to "Index", episodes_path, class: "h4 link" %>
    </span>
  </header>
  <section class="search-form">
    <%= form_for :clues, method: :get do |f| %>
      <div class="input-group input-group-lg">
        <%= label_tag :keywords, nil, class: "sr-only" %>
        <%= text_field_tag :keywords, nil, class: "form-control input-lg" %>
        <span class="input-group-btn">
          <%= submit_tag "Find Clues", class: "btn btn-primary btn-lg" %>
        </span>
      </div>
    <% end %>
  </section>
  <section class="search-results">
    <div class="list-group">
      <% @clues.each do |clue| %>
        <div class='list-group-item list-group-item-action'>
          <h4>
            <%= clue.category.name %>
            <span class="value-results"><%= clue.value %></span>
            <span class="pull-right">
              <%= link_to clue.episode.air_date.to_s, episode_path(clue.episode) %>
            </span>
          </h4>
          <span class="clue-result toggle-container">
            <%= clue.clue %>
            <a href="#/" class="show-response toggler">
              <i class="fa fa-chevron-circle-right"></i>
            </a>
            <span class='response-results togglee hidden'><%= clue.correct_response %></span>
          </span>
        </div>
      <% end %>
    </div>
  </section>
</div>
